<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="#1c000000"
                android:centerColor="#7e060606"
                android:startColor="#d4000000" />
        </shape>
    </item>
    <item android:height="5dp"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/on_focus_tile"/>
        </shape>
    </item>
</layer-list>